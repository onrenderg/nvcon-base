<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NICVC.ReserveNicDashboardPage" 
             x:Name="title_reservepage"
             BackgroundImageSource="back1.jpg"
              xmlns:sys="clr-namespace:System;assembly=mscorlib"
              xmlns:ios="clr-namespace:Microsoft.Maui.Controls.PlatformConfiguration.iOSSpecific;assembly=Microsoft.Maui.Controls" 
              ios:Page.UseSafeArea="true" Title="Reserve" IconImageSource="ic_reservevideo">
    <NavigationPage.TitleView>
        <HorizontalStackLayout x:Name="Custom_Navigation" HorizontalOptions="Fill" VerticalOptions="Center" Spacing="10">
            <Image Source="ic_launcher.png" HeightRequest="40" VerticalOptions="Center"/>
            <Label x:Name="Lbl_Header1" 
                   Text="NIC Video Conferencing" 
                   Style="{StaticResource NavigationLabelColor}" 
                   FontSize="20" 
                   FontAttributes="Bold" 
                   HorizontalTextAlignment="Center" 
                   VerticalTextAlignment="Center" 
                   HorizontalOptions="Center"/>
        </HorizontalStackLayout>
    </NavigationPage.TitleView>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <Frame Grid.Row="0" CornerRadius="20" BorderColor="Navy" HorizontalOptions="Fill" Margin="5" BackgroundColor="AliceBlue" Padding="10">               
            <Label x:Name="Lbl_UserDetails" 
                   BackgroundColor="Transparent" 
                   TextColor="Navy" 
                   FontSize="16" 
                   FontAttributes="Bold" 
                   HorizontalTextAlignment="Center" 
                   VerticalTextAlignment="Center"/>
        </Frame>
        
        <Frame Grid.Row="1" CornerRadius="20" BorderColor="Navy" HorizontalOptions="Fill" Margin="5" BackgroundColor="AliceBlue" Padding="10">
            <Label x:Name="Lbl_Header" 
                   BackgroundColor="Transparent" 
                   TextColor="Navy" 
                   FontSize="16" 
                   FontAttributes="Bold" 
                   HorizontalTextAlignment="Center" 
                   VerticalTextAlignment="Center"/>
            <!--<Image Source="ic_refresh.png" Aspect="AspectFit" HeightRequest="50" HorizontalOptions="End"/>-->
        </Frame>
      
        <Grid Grid.Row="2" Margin="10,0,10,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="30*"/>
                <ColumnDefinition Width="70*"/>
            </Grid.ColumnDefinitions>

            <Label x:Name="lbl_fromdate" Text="Select Date" TextColor="Navy" VerticalTextAlignment="Center" HorizontalTextAlignment="Start" FontAttributes="Bold" Grid.Row="1" Grid.Column="0" FontSize="16"/>
            <DatePicker FontSize="16" FontAttributes="Bold" Format="dd-MM-yyyy" x:Name="DatePicker_startdate" HorizontalOptions="Fill" MinimumDate="{x:Static sys:DateTime.Now}" IsEnabled="True" DateSelected="DatePicker_startdate_DateSelected" Grid.Row="1" Grid.Column="1"/>
        </Grid>
        
        <ScrollView Grid.Row="3">
            <VerticalStackLayout Margin="15,0,15,0" Spacing="10">
                <Grid RowSpacing="5" ColumnSpacing="5">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Frame CornerRadius="20" BorderColor="Navy" Grid.Row="0" Grid.Column="0" BackgroundColor="AliceBlue" VerticalOptions="Start" Margin="5">
                            <VerticalStackLayout x:Name="TodayVcLayout" Spacing="5" Padding="10" VerticalOptions="Center">
                                <VerticalStackLayout.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="multistate_Tapped" NumberOfTapsRequired="1"/>
                                </VerticalStackLayout.GestureRecognizers>
                                <Image Source="ic_multipointstate" HeightRequest="50" HorizontalOptions="Center"/>
                                <Label x:Name="Lbl_multipointbystate" Text="Multipoint Managed By State" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" FontSize="12" FontAttributes="Bold" TextColor="Navy" HorizontalOptions="Center" LineBreakMode="WordWrap"/>
                            </VerticalStackLayout>
                        </Frame>

                        <Frame CornerRadius="20" BorderColor="Navy" Grid.Row="0" Grid.Column="1" BackgroundColor="#f2f2ff" VerticalOptions="Start" Margin="5">
                            <VerticalStackLayout Spacing="5" Padding="10" VerticalOptions="Center">
                                <VerticalStackLayout.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="multinichq_Tapped" NumberOfTapsRequired="1"/>
                                </VerticalStackLayout.GestureRecognizers>
                                <Image Source="ic_multipointnic" HeightRequest="50" HorizontalOptions="Center"/>
                                <Label x:Name="Lbl_multipointbynic" Text="Multipoint Managed By NIC" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" FontSize="12" FontAttributes="Bold" TextColor="Navy" HorizontalOptions="Center" LineBreakMode="WordWrap"/>
                            </VerticalStackLayout>
                        </Frame>

                        <Frame CornerRadius="20" BorderColor="Navy" Grid.Row="1" Grid.Column="0" BackgroundColor="GhostWhite" VerticalOptions="Start" Margin="5">
                            <VerticalStackLayout Spacing="5" Padding="10" VerticalOptions="Center">
                                <VerticalStackLayout.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="pointopoint_Tapped" NumberOfTapsRequired="1"/>
                                </VerticalStackLayout.GestureRecognizers>
                                <Image Source="ic_ptpicon.png" HeightRequest="50" HorizontalOptions="Center"/>
                                <Label x:Name="Lbl_pointopoint" Text="Point To Point" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" FontSize="12" FontAttributes="Bold" TextColor="Navy" HorizontalOptions="Center" LineBreakMode="WordWrap"/>
                            </VerticalStackLayout>
                        </Frame>

                        <Frame CornerRadius="20" BorderColor="Navy" Grid.Row="1" Grid.Column="1" BackgroundColor="#fff2fe" VerticalOptions="Start" Margin="5">
                            <VerticalStackLayout Spacing="5" Padding="10" VerticalOptions="Center">
                                <VerticalStackLayout.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="cicvc_Tapped" NumberOfTapsRequired="1"/>
                                </VerticalStackLayout.GestureRecognizers>
                                <Image Source="ic_cicicon.png" HeightRequest="50" HorizontalOptions="Center"/>
                                <Label x:Name="Lbl_cic" Text="CIC" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" FontSize="12" FontAttributes="Bold" TextColor="Navy" HorizontalOptions="Center" LineBreakMode="WordWrap"/>
                            </VerticalStackLayout>
                        </Frame>
                    </Grid>

                    <!-- Ongoing Conference Section -->
                    <Frame CornerRadius="20" BorderColor="Navy" BackgroundColor="AliceBlue" VerticalOptions="Start" HorizontalOptions="Fill" Margin="5,10,5,5" Padding="0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" x:Name="lbl_ongoingconferences" Text="Ongoing Conference" Padding="10" HorizontalOptions="Center" HorizontalTextAlignment="Center" FontSize="18" FontAttributes="Bold" TextColor="Navy"/>
                                <Image Grid.Column="1" Source="ic_live1.png" HeightRequest="30" Margin="10,0,10,0" VerticalOptions="Center"/>
                            </Grid>
                        </Frame>

                        <Grid RowSpacing="5" ColumnSpacing="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Frame CornerRadius="20" BorderColor="Navy" Grid.Row="0" Grid.Column="0" BackgroundColor="AliceBlue" VerticalOptions="Start" Margin="5" Padding="12">
                                <VerticalStackLayout Spacing="5" VerticalOptions="Center">
                                    <VerticalStackLayout.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="ongoingvc_Tapped" NumberOfTapsRequired="1"/>
                                    </VerticalStackLayout.GestureRecognizers>
                                    <Label x:Name="Lbl_Ongoing" Text="Ongoing - 2" VerticalTextAlignment="Center" HorizontalTextAlignment="Center" FontSize="12" FontAttributes="Bold" TextColor="Navy" LineBreakMode="WordWrap"/>
                                </VerticalStackLayout>
                            </Frame>
                            
                            <Frame CornerRadius="20" BorderColor="Navy" Grid.Row="0" Grid.Column="1" BackgroundColor="#f2fffb" VerticalOptions="Start" Margin="5" Padding="12">
                                <VerticalStackLayout Spacing="5" VerticalOptions="Center">
                                    <VerticalStackLayout.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="importantvc_Tapped" NumberOfTapsRequired="1"/>
                                    </VerticalStackLayout.GestureRecognizers>
                                    <Label x:Name="Lbl_Important"
                                           Text="Important Vc's - 0"
                                           VerticalTextAlignment="Center"
                                           HorizontalTextAlignment="Center"
                                           FontSize="12"
                                           FontAttributes="Bold"
                                           TextColor="Navy"
                                           LineBreakMode="WordWrap"/>
                                </VerticalStackLayout>
                            </Frame>
                        </Grid>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Loading Overlay -->
        <Grid Grid.Row="0" 
              Grid.RowSpan="4"
              x:Name="Loading_activity" 
              BackgroundColor="#C0808080" 
              IsVisible="false"
              Padding="20">
            <Frame BackgroundColor="White" 
                   VerticalOptions="Center" 
                   HorizontalOptions="Center" 
                   Padding="20" 
                   CornerRadius="10">
                <HorizontalStackLayout Spacing="15">
                    <ActivityIndicator IsVisible="true" IsRunning="true" Color="Navy"/>
                    <Label x:Name="Lbl_PleaseWait" 
                           Text="Please Wait ..." 
                           TextColor="Black" 
                           FontAttributes="Bold" 
                           VerticalTextAlignment="Center"/>
                </HorizontalStackLayout>
            </Frame>
        </Grid>
    </Grid>

</ContentPage>
